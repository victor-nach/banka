{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": [
                "bin/*.js",
                "lib/*.js"
            ],
            "rules": {}
        },
        {
            "files": [
                "*spec.js"
            ],
            "rules": {
                "import/no-extraneous-dependencies": 0,
                "no-undef": 0
            }
        }
    ],
    "rules": {
    }
}