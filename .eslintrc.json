{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "overrides": [
        {
            "files": [
                "*spec.js"
            ],
            "rules": {
                "import/no-extraneous-dependencies": 0,
                "no-undef": 0,
                "no-shadow": 0              
            }
        },
        {
            "files": [
                "*validatorHelpers.js"
            ],
            "rules": {
                "class-methods-use-this": 0
            }
        },
        {
            "files": [
                "*helper.js"
            ],
            "rules": {
                "prefer-destructuring": 0
            }
        }
    ],
    "rules": {
        
    }
}