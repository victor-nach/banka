{
  "name": "banka",
  "version": "1.0.0",
  "description": "A lightweight banking app",
  "main": "server/app.js",
  "scripts": {
    "start": "node ./build/app.js",
    "start:dev": "nodemon --exec babel-node server/app.js",
    "build": "rm -rf build && mkdir build && babel -d ./build ./server && export NODE_ENV='production' && node build/models/db/migration.js ",
    "test": "nyc --reporter=text mocha server/test --require @babel/register --timeout 10000 --exit || true",
    "coverage": "nyc report --reporter=text-lcov | coveralls ",
    "lint": "./node_modules/.bin/eslint ./server",
    "lint:fix": "./node_modules/.bin/eslint ./server --fix || true",
    "migration:test": "export NODE_ENV=test && babel-node server/models/db/migration.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victor-nach/banka.git"
  },
  "author": "Iheanacho Victor",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/victor-nach/banka/issues"
  },
  "homepage": "https://github.com/victor-nach/banka#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.3",
    "@babel/register": "^7.4.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha": "^6.0.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0",
    "sinon": "^7.3.1",
    "sinon-chai": "^3.3.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.3",
    "bcrypt": "^3.0.5",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.10.0"
  }
}
